<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgView1"
            android:layout_width="410dp"
            android:layout_height="282dp"
            android:layout_marginTop="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <Button
            android:id="@+id/btnView1"
            android:layout_width="153dp"
            android:layout_height="56dp"
            android:layout_marginStart="129dp"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="129dp"
            android:text="Search Houses"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerView1" />

        <Spinner
            android:id="@+id/spinnerView1"
            android:layout_width="314dp"
            android:layout_height="44dp"
            android:layout_marginStart="47dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/txtView1"
            android:layout_width="316dp"
            android:layout_height="112dp"
            android:layout_marginStart="46dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="49dp"
            android:text="Details of Property"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="315dp"
            android:layout_height="36dp"
            android:layout_marginStart="49dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="47dp"
            android:text="Price Range"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtView1" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="316dp"
            android:layout_height="38dp"
            android:layout_marginStart="46dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="49dp"
            android:text="Property Details"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgView1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>